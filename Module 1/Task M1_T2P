int ir_sensor = 2;  
int led = 8;        

void setup()
{
  
  Serial.begin(9600);
  pinMode(ir_sensor, INPUT);  
  pinMode(led, OUTPUT);       
  
  // Attach interrupt for IR sensor pin
  attachInterrupt(digitalPinToInterrupt(ir_sensor), motion_detection, CHANGE);
}

void loop()
{
  // The loop is intentionally left empty, as the main tasks are handled in the interrupt
}

void motion_detection()
{
  // Read the value from the IR sensor
  // Check if the IR sensor is HIGH
  if (digitalRead(ir_sensor) == HIGH)
  {
    // If motion is detected, turn on the LED
    digitalWrite(led, HIGH);
    Serial.println("Motion Detected");
    Serial.println("LED ON");
  }
  else
  {
    // If no motion is detected, turn off the LED
    digitalWrite(led, LOW);
    Serial.println("Motion Not Detected");
    Serial.println("LED OFF");
  }
}
